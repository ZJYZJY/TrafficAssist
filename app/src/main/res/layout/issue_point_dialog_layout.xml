<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/issue_type_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/issue_type_iv"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/issue_type_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bsd_issue_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bsd_issue_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="地点"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bsd_issue_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="程度"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bsd_issue_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="详细信息"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>